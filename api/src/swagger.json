{
    "openapi": "3.0.0",
    "info": {
        "title": "desafio_votacao_2",
        "description": "This project is a challenge, at the link: https://github.com/dbserver/desafio-votacao-2.0 .",
        "version": "1.0.0",
        "contact": {
            "email": "leandronstrab@gmail.com"
        }
    },
    "servers": [
        {
            "url": "http://localhost:8081/v1",
            "description": "API development"
        }
    ],
    "paths": {
        "/users": {
            "post": {
                "security": [{
                    "x-access-token": []
                }],
                "summary": "User registration",
                "description": "Create a new user CPF or CNPJ.",
                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserSchema"     
                            },
                            "examples": {
                                "user1":{
                                    "value": {
                                        "user": {
                                            "name": "teste1",
                                            "password": "12345678",
                                            "email": "teste1@gmail.com",
                                            "document": "804.608.240-66",
                                            "permission": "DEFAULT"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "422": {
                        "description": "Unprocessable Entity",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref":"#/components/schemas/APIError"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref":"#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "conflict",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref":"#/components/schemas/APIError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/current": {
            "get": {
                "security": [{
                    "x-access-token": []
                }],
                "summary": "Current user",
                "description": "Get current authenticated user",
                "tags": ["Users"],
                "responses": {
                    "422": {
                        "description": "Unprocessable Entity",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref":"#/components/schemas/APIError"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref":"#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref":"#/components/schemas/APIError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth": {
            "post": {
                "summary": "User authentication",
                "description": "user authentication jwt",
                "tags": ["auth"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserAuthSchema"     
                            },
                            "examples": {
                                "user1":{
                                    "value": {
                                        "user": {
                                            "password": "12345678",
                                            "document": "804.608.240-66"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "422": {
                        "description": "Unprocessable Entity",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref":"#/components/schemas/APIError"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref":"#/components/schemas/Authentication"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref":"#/components/schemas/APIError"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "UserSchema": {
                "type": "object",
                "properties": {
                    "user": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "password": {
                                "type": "string"
                            },
                            "email": {
                                "type": "string"
                            },
                            "document": {
                                "type": "string"
                            },
                            "permission": {
                                "type": "string"
                            }
                        }
                    }                   
                }                
            },
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "uuid": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "permission": {
                        "type": "string"
                    },
                    "document": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string"
                    },
                    "updatedAt": {
                        "type": "string"
                    }                    
                }              
            },
            "Authentication": {
                "type": "object",
                "properties": {
                    "auth": {
                        "type": "boolean"
                    },
                    "token": {
                        "type": "string"
                    }
                }
            },
            "UserAuthSchema": {
                "type": "object",
                "properties": {
                    "user": {
                        "type": "object",
                        "properties": {
                            "password": {
                                "type": "string"
                            },
                            "document": {
                                "type": "string"
                            }
                        } 
                    }
                }   
            },
            "APIError": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "detail": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    },
                    "statusCode": {
                        "type": "number"
                    },
                    "data": {
                        "type": "object"
                    }
                }
            }
        },
        "securitySchemes": {
            "x-access-token" : {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT" 
            }
        }
    }
}